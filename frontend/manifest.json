{
  "manifest_version": 3,
  "name": "Form Field Counter",
  "version": "1.0",
  "description": "Counts all input and form fields on the current page",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}